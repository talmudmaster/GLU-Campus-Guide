<!--pages/map/search/search.wxml-->
<view class="root">
    <image class="search-icon" src="{{searchIcon}}"></image>
    <input class="input" placeholder="请输入要搜索的地点" bindinput="getContent" type="text" />
    <view class="input_search" type="primary" bindtap="goSearch">
        搜索
    </view>
</view>

<view class="read-in">
    <view class="headline" wx:if="{{historyStorage.length!=0}}" hidden="{{historyStorageShow?false:true}}">
        <view class="head-headline">
            <image class="icon-right" src="{{history}}"></image>

            <view class="headline-size">搜索历史</view>

            <image class="icon-right" src="{{delete}}" catchtap="remove"></image>
        </view>

        <view class="lately-main">
            <view class="chunk" wx:for="{{historyStorage}}" wx:key="index" bindtap='goHistorySearch' data-index='{{index}}' data-postname="{{item}}">
                <text>{{item}}</text>
            </view>
        </view>
    </view>

    <view class="headline">
        <view class="head-headline">
            <image class="icon-right" src="{{fire}}"></image>

            <view class="headline-size">热门搜索</view>

            <image class="icon-right" catchtap='open_eye' wx:if="{{isShoweye}}" src="{{eyeshow}}"></image>
            <image class="icon-right" wx:else catchtap='close_eye' src="{{eyeclose}}"></image>
        </view>

        <view class="lately-main">
            <view class="chunk" wx:if="{{isShow}}" wx:for="{{hotSearch}}" wx:key="index" bindtap="goHistorySearch" data-postname="{{item.name}}">
                <text>{{item.name}}</text>
            </view>
        </view>
    </view>
</view>

<view class="result">
    <view wx:if="{{result&&result.length>0}}">
        <view class="middle">
            搜索结果如下
        </view>

        <view class="result-list" wx:for="{{result}}" wx:key="*this" data-name="{{item.name}}" data-latitude="{{item.latitude}}" data-longitude="{{item.longitude}}" id="{{index}}" bindtap="tapback">
            <view class="item">
                <view>{{item.name}}</view>
                <view style="color: grey;font-size: small;">{{item.aliases}}</view>
            </view>
            浏览次数：{{item.browse}}
        </view>
    </view>

    <view wx:if="{{result&&result.length==0}}" class="middle">
        抱歉，没有找到您想找的地点
    </view>
</view>