<!--pages/admin/manage-admin/manage-admin.wxml-->
<view>
  <view class="card">
    <view class="card-top">
      管理员管理
    </view>

    <view class="card-container">
      <view wx:if="{{sid == 1}}" class="card-container-title">
        <view class="card-container-title-font">
          新增管理员
        </view>
      </view>

      <view wx:if="{{sid == 2}}" class="card-container-title">
        <view class="card-container-title-font">
          管理管理员
        </view>
      </view>


      <view class="card-container-form">
        <view class="card-container-form-list">
          <view class="card-container-form-list-list-text">
            名字：
          </view>

          <input class="card-container-form-list-input" type="text" bindinput="getName" value="{{name}}" />
        </view>
        <view class="card-container-form-list">
          <view class="card-container-form-list-list-text">
            openid：
          </view>

          <input class="card-container-form-list-input" type="text" bindinput="getOpenid" value="{{openid}}" />
        </view>
        <button wx:if="{{sid == 1}}" type="primary" bindtap="addAdmin">确认添加</button>

        <button wx:if="{{sid == 2}}" type="primary" bindtap="updateAdmin">确认修改</button>

        <button wx:if="{{sid == 2}}" type="warn" bindtap="removeAdmin" style="margin-top: 20px;">确认删除</button>
      </view>
    </view>

  </view>
</view>