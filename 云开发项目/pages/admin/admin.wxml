<!--pages/admin/admin.wxml-->
<view class="all">
  <view class="page-title">管理界面</view>

  <view class="card">
    <view class="title">🏫 地点管理</view>

    <view class="content">
      <view class="btn" bindtap="taptosite" data-id="1">
          地点类型
      </view>

      <view class="btn" bindtap="taptosite" data-id="2">
          地点
      </view>

      <view class="btn" bindtap="taptosite" data-id="3">
          默认地点
      </view>

      <view class="btn" bindtap="taptorange">
          学校范围
      </view>
    </view>
  </view>

  <view class="card">
    <view class="title">🖼️ 媒体管理</view>

    <view class="content">
      <view class="btn" bindtap="taptomedia" data-id="1">
          校园地图图片
      </view>

      <view class="btn" bindtap="taptomedia" data-id="2">
          轮播图
      </view>

      <view class="btn" bindtap="taptomedia" data-id="3">
          视频
      </view>

      <view class="btn" bindtap="taptomedia" data-id="4">
          地点默认图片
      </view>
    </view>
  </view>

  <view class="card">
    <view class="title">📖 信息管理</view>

    <view class="content">
      <view class="btn" bindtap="taptoguide">
          校园指南
      </view>
    </view>
  </view>

  <view class="card">
    <view class="title">👤 成员管理</view>

    <view class="content">
      <view class="btn" bindtap="taptoadminmanage">
          管理员
      </view>
    </view>
  </view>
</view>