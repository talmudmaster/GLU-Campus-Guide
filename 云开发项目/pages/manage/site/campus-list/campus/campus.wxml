<!--pages/manage/campus-list/campus/campus.wxml-->
<view>
    <view class="card">
        <view class="card-top">
            校区管理
        </view>

        <view class="card-container">
            <view wx:if="{{sid == 1}}" class="card-container-title">
                <view class="card-container-title-font">
                    新增校区
                </view>
            </view>

            <view wx:if="{{sid == 2}}" class="card-container-title">
                <view class="card-container-title-font">
                    管理校区
                </view>
            </view>


            <view class="card-container-form">
                <view class="card-container-form-list">
                    <view>
                        校区名称：
                    </view>

                    <input class="card-container-form-list-input" type="text" bindinput="getName" value="{{name}}" />
                </view>

                <view class="card-container-form-list">
                    <view>
                        校区经度：
                    </view>

                    <input class="card-container-form-list-input" type="text" bindinput="getLongitude" value="{{longitude}}" />
                </view>

                <view class="card-container-form-list">
                    <view>
                        校区纬度：
                    </view>

                    <input class="card-container-form-list-input" type="text" bindinput="getLatitude" value="{{latitude}}" />
                </view>

                <view class="card-container-form-list">
                    <view>
                        校区范围：
                    </view>

                    <view class="card-container-form-list-list-picker" bindtap="getRange">
                        选择范围
                    </view>

                    <view style="width: 90px;">
                        <text wx:if="{{range.length}}">已选择</text>
                        <text wx:else style="color: red">未选择</text>
                    </view>
                </view>

                <view class="card-container-form-list" wx:if="{{_id}}">
                    <view class="card-container-form-list-list-text">
                        默认地点：
                    </view>

                    <view wx:if="{{site_list.length > 0}}" >
                      <picker class="card-container-form-list-list-picker" range="{{categoryColumns}}" mode="multiSelector" bindchange="onCategoryChange" bindcolumnchange="onColumnChange" value="{{0}}">
                          选择地点
                      </picker>
                      <view wx:if="{{selectedNames[0]}}">{{selectedNames[0]}} - {{selectedNames[1]}}</view>
                    </view>

                    <view wx:else style="color: red">
                      当前校区无地点，请先去添加地点
                    </view>
                </view>

                <view class="card-container-form-list">
                    <view>
                        使用图片：
                    </view>

                    <switch checked="{{isUseMapImg}}" bindchange="switchChange"/>
                </view>

                <view wx:if="{{isUseMapImg}}">
                  <view style="border-bottom: 1px solid grey; margin: 10px 0"></view>

                  <view class="card-container-form-list">
                      <view>
                          北端纬度：
                      </view>

                      <input class="card-container-form-list-input" type="text" bindinput="getBounds" data-type="north" value="{{bounds.north}}" />
                  </view>

                  <view class="card-container-form-list">
                      <view>
                          南端纬度：
                      </view>

                      <input class="card-container-form-list-input" type="text" bindinput="getBounds" data-type="south" value="{{bounds.south}}" />
                  </view>

                  <view class="card-container-form-list">
                      <view>
                          西端经度：
                      </view>

                      <input class="card-container-form-list-input" type="text" bindinput="getBounds" data-type="west" value="{{bounds.west}}" />
                  </view>

                  <view class="card-container-form-list">
                      <view>
                          东端经度：
                      </view>

                      <input class="card-container-form-list-input" type="text" bindinput="getBounds" data-type="east" value="{{bounds.east}}" />
                  </view>



                  <view class="card-container-form-list">
                      <view class="card-container-form-list-list-text">
                          校区图片：
                      </view>

                      <view>
                        <view class="card-container-form-list-list-picker" bindtap="getImg">
                            上传图片
                        </view>

                        <view class="card-container-container-title no">
                            为确保地图观感，请上传<text style="color: red">原图</text>
                        </view>
                      </view>
                  </view>

                  <view class="card-container-form-list-img">
                      <image style="width: 240px;height: auto;" src="{{img}}" mode="widthFix" />
                  </view>

                </view>

                <button wx:if="{{sid == 1}}" type="primary" bindtap="addcampus">确认添加</button>

                <button wx:if="{{sid == 2}}" type="primary" bindtap="updatecampus">确认修改</button>

                <button wx:if="{{sid == 2}}" type="warn" bindtap="removecampus" style="margin-top: 20px;">确认删除</button>
            </view>
        </view>

    </view>
</view>