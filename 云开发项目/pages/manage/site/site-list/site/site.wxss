/* pages/manage/site/site-list/site/admin.wxss */
page {
  background: #f3f3f3;
}

.card {
  margin: 10px 15px;
  border-radius: 10px;
  background-color: white;
}

.card-top {
  height: 60px;
  border-radius: 10px 10px 0 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22px;
}

.card-container {
  margin-bottom: 30px;
  margin: 10px;
}

.card-container-title {
  display: flex;
  align-items: center;
  flex-direction: row;
  margin-bottom: 10px;

}

.card-container-title-font {
  color: #73a5d6;
  margin-left: 10px;
  font-size: 22px;
}

.card-container-form {
  border-bottom: 10px solid white;
}

.card-container-form-list {
  display: flex;
  margin: 10px;
  flex-direction: column;
}

.card-container-form-list-list {
  display: flex;
  margin: 10px;
  align-items: center;
}

.card-container-form-list-list-text {
  width: 80px;
}

.card-container-form-list-list-input {
  border: 1px solid grey;
  width: 190px;
  padding-left: 10px;
  border-radius: 8px;
}

.height_input {
height: 75px;
}

.card-container-form-list-list-picker {
  width: 100px;
  border: 1px solid grey;
  border-radius: 8px;
  padding: 2px;
  text-align: center;
  color: white;
  background-color: #07c160;
  margin-right: 10px;
}

.card-container-form-list-img {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}