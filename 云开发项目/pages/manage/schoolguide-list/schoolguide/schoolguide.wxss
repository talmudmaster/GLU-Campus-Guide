.tag-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx 10rpx;
}

.tag-item {
  position: relative;
  background: #e7f3ff;
  border-radius: 8rpx;
  padding: 12rpx 50rpx 12rpx 20rpx;
  color: #1890ff;
  transition: all 0.4s cubic-bezier(0.18, 0.89, 0.32, 1.28);
}

.close-btn {
  position: absolute;
  right: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  border-radius: 50%;
  background: #ff4d4f;
  color: white;
  font-size: 24rpx;
  opacity: 0.8;
  transition: opacity 0.2s;
}

.close-btn:active {
  opacity: 1;
  transform: translateY(-50%) scale(0.9);
}
