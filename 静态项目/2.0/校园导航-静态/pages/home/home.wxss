}

.list-l {
  margin-top: 10px;
}

.list-list {
  padding: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 1px #e1e1e1;
}

.list-list-left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.list-list-left-icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

.list-list-left-text {
  font-size: 15px;
}

.normal {
  font-weight: normal;
}

.list-list-left-text-key {
