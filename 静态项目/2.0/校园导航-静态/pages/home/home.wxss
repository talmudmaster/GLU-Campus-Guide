/* pages/school/school.wxss */
@import "../../utils/utils.wxss";

.list-landscape-title {
  padding-top: 5px;
  font-size: 22px;
  margin-left: 10px;
  font-weight: bold;
}

.list-landscape-container {
  margin-top: 10px;
}

.list-landscape-container .wx-swiper-dot.wx-swiper-dot-active {
  width: 33rpx;
  border-radius: 15rpx;
}

/* 指示点靠右 */
.wx-swiper-dots {
  position: relative;
  left: unset !important;
  right: 0;
}

.list-landscape-container-swiper {
  height: 388rpx;
}

.list-landscape-container-swiper-item {
  margin-left: 22rpx;
  /* height: 100%; */
}

.list-landscape-container-swiper-item-img {
  width: 100%;
  height: auto;
  border-radius: 8px;
}

.list-landscape-container-icon {
  position: relative;
  margin-top: -70rpx;
  display: flex;
  align-items: center;
}

.list-landscape-container-icon-img {
  height: 140rpx;
  width: 140rpx;
}

.list-landscape-container-icon-school {
  height: 60rpx;
  width: 174rpx;
}

.list-landscape-container-text {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 3px;
  /* padding-bottom: 3px; */
  font-size: 24px;
  text-align: center;
}

.list-info {
  /* padding: 8px; */
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 16px;
  padding-bottom: 8px;
}

.list-info-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.list-info-container-titletext {
  color: white;
  border-radius: 15px;
  padding: 2px 10px;
  /* margin-bottom: 10px; */
  margin-top: 10px;
  margin-bottom: 8px;
  /* font-size: small; */
}

