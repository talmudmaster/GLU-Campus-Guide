/* pages/school/guidance/guidance.wxss */
page {
  background-color: #f1f1f1;
  /* font-weight: lighter; */
}

.cu-bar {
  display: flex;
  position: relative;
  align-items: center;
  min-height: 100rpx;
  justify-content: space-between;
}

.bg-white {
  background-color: white;
  color: darkGray;
}

.cu-bar .search-form {
  background-color: #f5f5f5;
  line-height: 64rpx;
  height: 64rpx;
  font-size: 24rpx;
  color: black;
  flex: 1;
  display: flex;
  align-items: center;
  margin: 0 30rpx;
}

.cu-bar .action {
  display: flex;
  align-items: center;
  height: 100%;
  justify-content: center;
  max-width: 100%;
}

.cu-bar .search-form + .action {
  margin-right: 30rpx;
}

.cu-btn {
  position: relative;
  border: 0rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 64rpx;
  line-height: 1;
  text-align: center;
  text-decoration: none;
  overflow: visible;
  margin-left: initial;
  transform: translate(0rpx, 0rpx);
  margin-right: initial;

  width: 116rpx !important;
}

.bg-green {
  background-color: #39b54a;
  color: white;
}

.shadow-blur {
  position: relative;
}

.cu-card {
  display: block;
  overflow: hidden;
}

.cu-card.dynamic {
  display: block;
}

.cu-card > .cu-item {
  display: block;
  background-color: white;
  overflow: hidden;
  border-radius: 10rpx;
  margin: 30rpx;
}

.padding-sm {
  padding: 20rpx;
}

.text-content {
  line-height: 1.6;
}

.text-blue,
.line-blue,
.lines-blue {
  color: #0081ff;
}

.text-xl {
  font-size: 36rpx;
}

.margin-sm {
  margin: 20rpx;
}

.cu-card.dynamic > .cu-item > .text-content {
  padding: 0 20rpx 0;
  max-height: 6.4em;
  overflow: hidden;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.img {
  display: flex;
  justify-content: center;
}

image {
  max-width: 100%;
  display: inline-block;
  position: relative;
  z-index: 0;
}

.cu-bar .search-form input {
  flex: 1;
  padding-right: 30rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  background-color: transparent;
}
